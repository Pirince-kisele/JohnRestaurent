<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../layouts/head'); %>
  </head>

  <body>
    <header><%- include('../layouts/nav'); %></header>

    <!--header section-->
    <section class="pt-5 bgcontact">
      <div class="container pt-5">
        <h1 class="text-dark text-center pt-5">Contact Us</h1>
      </div>
    </section>
    <!---section with contact form-->
    <section class="text-dark py-4">
      <div class="container  shadow py-5  rounded-2">
        <div class="d-block text center py-2">
          <h2>GET IN TOUCH</h2>
          <p>
            <span><i class="bi bi-phone text-dark mx-1"></i></span> Phone (319)
            555-555
          </p>
          <p>
            <span><i class="bi bi-mailbox text-dark mx-1"></i></span> Email
            liyo123@gmail.com
          </p>
          <p>
            <span><i class="bi bi-location text-dark mx-1"></i></span> Address
            123 Demo Street Waterloo, Iowa 50723
          </p>
        </div>
        <form action="" method="post" class="row p-2">
          <div class="d-md-flex d-sm-block justify-content-between align-items-center gap-1">
            <div class="col-md-6">
              
              <div class="p-2">
                <h2 class"" >Your Information</h2>
                <label for="name" class="form-label"
                  >Your Name</label
                >
                <input
                  type="text"
                  class="form-control w-100"
                  id="name"
                  placeholder="name"
                />
              </div>
              <div class="p-2">
                <label for="email" class="form-label"
                  >Email address</label
                >
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  placeholder="name@example.com"
                />
              </div>
              <div class="p-2 ">
                <label for="phone" class="form-label"
                  >Phone Number</label
                >
                <input
                  type="phone"
                  class="form-control"
                  id="phone"
                  placeholder="ex (390) 555 555"
                />
              </div>
            </div>
            <div class="col-md-6">
              <div class="">
                <h2 class="py-2">Leave Your Message Here</h2>
        
                <textarea
                  class="form-control"
                  id="message"
                  rows="10"
                ></textarea>
              </div>
             
            </div>
            
          </div>
          <div class="py-4 text-center">
            <input class="btn btn-primary" type="submit" value="Submit">
            </div>
        </form>
      </div>
    </section>
    <section class="pb-3" >
      <div class="container shadow px-2 d-sm-p-0">
         <div class="d-md-flex d-sm-block  justify-content-between align-items-center gap-1">
           <div class="pt-1">
            <img class="w-100 img-fluit rounded-2" src="https://www.gloriafood.com/wp-content/uploads/2018/06/dark-background-1024x683.jpg">
           </div>
           <div class="pt-1">
             <img class="w-100 img-fluit rounded-2" src="https://blog.ingenico.us/hubfs/restaurant.jpg#keepProtocol">
            </div>
           <div class="pt-1">
             <img class="w-100 img-fluit rounded-2" src="https://blog.ingenico.us/hubfs/restaurant.jpg#keepProtocol">
            </div>
             
          
        </div>
        
      </div>
    </section>

    <section><%- include('../layouts/footer') %></section>

    <%- include('../layouts/script'); %>
  </body>
</html>
